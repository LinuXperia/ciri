project(json-c-dep NONE)
cmake_minimum_required(VERSION 3.4)

include(ExternalProject)

ExternalProject_Add(
    json-c
    GIT_REPOSITORY https://github.com/json-c/json-c.git
    GIT_TAG "master"
    DOWNLOAD_DIR ${JSON-C_DEPS_DIR}
    TMP_DIR ${JSON-C_DEPS_DIR}/tmp
    STAMP_DIR ${JSON-C_DEPS_DIR}/stamp
    SOURCE_DIR ${JSON-C_DEPS_DIR}/src
    BUILD_IN_SOURCE 1
    CONFIGURE_COMMAND sh <SOURCE_DIR>/autogen.sh && ./configure
    BUILD_COMMAND make -j4
    INSTALL_COMMAND ""
    TEST_COMMAND ""
)
